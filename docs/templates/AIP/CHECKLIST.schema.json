{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Agent Implementation Packet Checklist Schema",
  "type": "object",
  "required": ["version", "feature", "status", "phases"],
  "properties": {
    "version": {"type": "integer", "minimum": 1},
    "feature": {"type": "string", "minLength": 1},
    "status": {"type": "string", "enum": ["pending", "in_progress", "completed", "abandoned", "incomplete"]},
    "constraints": {"type": "array", "items": {"type": "string"}},
    "parity": {"type": "object"},
    "env_defaults": {"type": "object"},
    "phases": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "tasks"],
        "properties": {
          "id": {"type": "string", "minLength": 1},
          "name": {"type": "string", "minLength": 1},
          "description": {"type": "string"},
          "tasks": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["id", "title", "status"],
              "properties": {
                "id": {"type": "string"},
                "title": {"type": "string"},
                "files": {"type": "array", "items": {"type": "string"}},
                "status": {"type": "string", "enum": ["pending", "in_progress", "completed", "abandoned", "incomplete"]}
              }
            }
          }
        }
      }
    },
    "verification": {
      "type": "object",
      "properties": {
        "commands": {"type": "array", "items": {"type": "string"}},
        "acceptance": {"type": "array", "items": {"type": "string"}}
      }
    }
  }
}

